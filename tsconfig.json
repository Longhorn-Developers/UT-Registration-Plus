{
    "compilerOptions": {
        "baseUrl": ".",
        "rootDir": ".",
        "target": "esnext",
        "module": "esnext",
        "noEmit": true,
        "jsx": "react",
        "typeRoots": ["./node_modules/@types", "@types"],
        "skipLibCheck": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "moduleResolution": "node",
        "types": ["vite/client", "unplugin-icons/types/react", "node"],
        "noFallthroughCasesInSwitch": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "noUncheckedIndexedAccess": true,
        "moduleDetection": "force",
        "isolatedModules": true,
        "paths": {
            "src/*": ["src/*"],
            "@assets/*": ["src/assets/*"],
            "@pages/*": ["src/pages/*"],
            "@public/*": ["public/*"],
            "@shared/*": ["src/shared/*"],
            "@background/*": ["src/pages/background/*"],
            "@views/*": ["src/views/*"]
        }
    },
    "include": [
        "src",
        "utils",
        "scripts",
        "vite.config.ts",
        "@types",
        "node_modules/@types",
        "src/manifest.ts",
        "package.json",
        ".eslintrc.cjs",
        "postcss.config.cjs",
        ".storybook",
        "unocss.config.ts",
        "gulpfile.js",
        "@types"
    ]
}
